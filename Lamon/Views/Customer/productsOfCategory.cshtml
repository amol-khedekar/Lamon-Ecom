@model List<Product>
@{
    ViewData["Title"] = "productsOfCategory";
       Layout = "~/Views/Shared/_CustomerLayout.cshtml";

}


<div class="container">
  <div class="row text-center">

       @foreach(var product in Model)
       {
         <div  class="col-lg-3 col-md-6 mb-4">
            <a asp-action="DetailsOfProduct" asp-controller="Customer"  asp-route-productId=@product.Id>
            <div class="card">
                <img width="200px" height="200px" class="card-img-top" src="data:image/*;base64,@(Convert.ToBase64String(product.Image))" alt="">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    @*<p class="card-text">
                        @product.Description
                    </p>*@
                </div>

                <div class=" row"> 
                    <div class= "col-12" >
                         <strong>@product.Price EGP</strong>
                    </div>

                    <div class= "col-1">
                        <a  asp-controller="Customer" asp-action="AddToCart"  asp-route-productId=@product.Id asp-route-NameView="category" class="btn btn-primary btn-outline-dark"><i class="fa fa-cart-plus "></i> Add To
                        Cart</a>
                    </div>
                </div>
            </div>
            </a>
        </div>
      }
  </div>
</div>



